<!--pages/user/user_index/user_index.wxml-->
<view class="container user_index">
  <view class="userInfo flex-column-ajcenter">
    <avatar class="userInfo-avatar" url="{{userInfo.avatarUrl}}"></avatar>
    <text class="userInfo-nickname">{{userInfo.nickName}}</text>
  </view>


  <view class="term-wrapper">
    <block wx:for="{{listItems}}">
      <navigator url="{{item.toUrl}}" class="term flex-row flex-row-aicenter">
        <view class="term-icon iconfont {{item.icon}}" style="background-color:{{item.bgColor}}"></view>
        <text class="term-label">{{item.label}}</text>
        <view class="term-more iconfont icon-youjiantou"></view>
     </navigator>
    </block>
  </view>

</view>