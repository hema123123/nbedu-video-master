/* pages/user/user_index/user_index.wxss */

.userInfo {
  padding: 40rpx;
  background: #fff;
}

.userInfo .userInfo-avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  box-shadow: 0px 1px 6px rgba(0, 0, 0, 0.1);
}

.userInfo-nickname {
  color: #000;
  font-size: 34rpx;
}


.term-wrapper{
  margin-top: 20rpx;
}
.term {
  padding: 20rpx 30rpx;
  background: #fff;
  margin-bottom: 10rpx;
}
.term:last-child{
  margin-bottom: 0;
}

.term-icon {
  flex: 0 0 48rpx;
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: green;
  color: #fff;
  text-align: center;
  margin-right: 10rpx;
}

.term-label {
  flex: 1;
  font-size: 34rpx;
  color: #000;
}

.term-more {
  flex: 0 0 24rpx;
  width: 24rpx;
  font-size: 28rpx;
  text-align: center;
}
