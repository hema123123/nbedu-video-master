/* pages/user/user_index/user_index.wxss */

.userInfo {
  padding: 40rpx;
  background: #fff;
}

.userInfo .userInfo-avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  margin-bottom: 10rpx;
  box-shadow: 0px 1px 6px rgba(0, 0, 0, 0.1);
}

.userInfo-nickname {
  color: #333;
  font-size: 34rpx;
}

.term-wrapper {
  margin-top: 10rpx;
  background: #fff;
}

.term {
  padding: 30rpx 20rpx 30rpx 0;
  margin-left: 20rpx;
  border-bottom: 2rpx solid #eee;
}

.term:last-child {
  border-bottom: 0;
  margin-bottom: 0;
}

.term-icon {
  flex: 0 0 38rpx;
  width: 38rpx;
  height: 38rpx;
  border-radius: 50%;
  color: #fff;
  margin-right: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
}

.term-label {
  flex: 1;
  font-size: 24rpx;
  color: #333;
}

.term-more {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #9e9e9e;
}

.term-more .iconfont {
  flex: 0 0 24rpx;
  width: 24rpx;
  font-size: 24rpx;
  text-align: center;
  color: #9e9e9e;
}
