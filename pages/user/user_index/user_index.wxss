/* pages/user/user_index/user_index.wxss */

.userInfo {
  padding: 40rpx;
  background: #fff;
}

.userInfo .userInfo-avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  margin-bottom: 10rpx;
  box-shadow: 0px 1px 6px rgba(0, 0, 0, 0.1);
}

.userInfo-nickname {
  color: #333;
  font-size: 34rpx;
}


.doc-lists{
  margin: 30rpx 0;
}
.doc-lists .doc-listleft .doc-icon {
  width: 38rpx;
  height: 38rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 38rpx;
  color: #fff;
  font-size: 24rpx;
  display: inline-block;
}
