/* pages/user/user.wxss */

.userinfo {
  width: 100%;
  height: 300rpx;
  background: #fff;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  background: #f9f9f9;
  border-radius: 50%;
  overflow: hidden;
  border: 2px solid #fff;  
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);  
}




 .infor-list{
  font-size: 30rpx;
  margin: 10px 0;
}

.infor-list .iconfont{
  width: 42rpx;
  height: 42rpx;
  border-radius: 50%;
  background: red;
  text-align: center;
  color:#fff;
  font-size: 30rpx;
}
.infor-list .weui-cell__hd{
  margin-right: 30rpx;
}
