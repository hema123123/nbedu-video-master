<!--pages/user_information/user_information.wxml-->
<view class="container">
  <view class="list-item">
    <text class="list-item-label">头像</text>
    <view class="list-item-right">
      <image class="userInfo-avatar" src="{{userInfo.avatarUrl}}" />
    </view>
  </view>

  <view class="list-item">
    <text class="list-item-label">昵称</text>
    <view class="list-item-right">
      <text>{{userInfo.nickName}}</text>
    </view>
  </view>

  <view class="list-item">
    <text class="list-item-label">性别</text>
    <view class="list-item-right">
      <text>{{userInfo.gender}}</text>
    </view>
  </view>

  <view class="list-item">
    <text class="list-item-label">生日</text>
    <view class="list-item-right">
      <text>生日</text>
    </view>
  </view>

  <view class="list-item">
    <text class="list-item-label">真实姓名</text>
    <view class="list-item-right">
      <text>{{userInfo.nickName}}</text>
    </view>
  </view>

  <view class="list-item">
    <text class="list-item-label">手机号</text>
    <view class="list-item-right">
      <text>手机号</text>
    </view>
  </view>

  <view class="list-item">
    <text class="list-item-label">地址</text>
    <view class="list-item-right">
      <text>{{userInfo.country}} {{userInfo.province}} {{userInfo.city}}</text>
    </view>
  </view>


  <view class="list-item">
    <text class="list-item-label">行业</text>
    <view class="list-item-right">
      <text>行业</text>
    </view>
  </view>

  <view class="list-item">
    <text class="list-item-label">公司</text>
    <view class="list-item-right">
      <text>公司</text>
    </view>
  </view>

  <view class="list-item">
    <text class="list-item-label">职位</text>
    <view class="list-item-right">
      <text>职位</text>
    </view>
  </view>
</view>