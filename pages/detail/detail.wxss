/* 视频 */

.video-wrapper {
  background: #fff;
}

.course-video,.course-img {
  width: 100%;
  background: #dedede;
}

/* 视频内容 */

.course-warpper {
  padding: 20rpx 0;
  margin: 0 20rpx;
  border-bottom: 2rpx solid #eee;
  background: #fff;
}

.course-warpper .course-content {
  flex: 1;
}

.course-warpper .course-share {
  flex: 0 0 240rpx;
  width: 240rpx;
}

.course-content {
  font-size: 28rpx;
  color: #000;
}

.course-content .course-name {
  font-size: 32rpx;
  margin-bottom: 4rpx;
}

.course-content .course-des {
  color: #888;
  font-size: 26rpx;
  margin-top: 10rpx;
}

.course-warpper .course-share {
  display: flex;
  align-items: flex-end;
  font-size: 28rpx;
  text-align: center;
  justify-content: center;
}

.course-warpper .course-share .course-share-item {
  border: none;
  padding-right: 20rpx;
  font-size: 28rpx;
  color: #888;
  border-right: 2rpx solid #eee;
}

.course-warpper .course-share .course-share-item:last-child {
  border-right: 0;
}

.course-warpper .course-share .iconfont {
  font-size: 56rpx;
  height: 56rpx;
  line-height: 56rpx;
}

.tags {
  font-size: 22rpx;
  background: #fff;
  padding: 20rpx;
}

.tags .iconfont {
  font-size: 24rpx;
  margin-right: 4rpx;
}

.tags .tags-item {
  margin-right: 20rpx;
}

.tags .tags-item:last-child {
  margin-right: 0;
}

