/* 底部 */

.fix-ftab {
  /* position: relative; */
  background: #fff;
}

.fix-ftab .fix-tab-icon {
  flex: 0 0 126rpx;
  width: 126rpx;
  font-size: 20rpx;
}

.fix-ftab .fix-tab-icon .iconfont {
  font-size: 46rpx;
}

.fix-ftab button {
  flex: 1;
  color: #fff;
  border-radius: 0;
}

.fix-tab-dd {
  width: 100%;
  height: 80rpx;
  padding: 0 20rpx;
  margin: 0 20rpx;
  border-radius: 100rpx;
  background: #eee;
}
.fix-tab-dd .iconfont{
  flex:0 0 48rpx;
  width:48rpx;
  font-size:48rpx;
  color:#a2a2a2;
  margin-right: 10rpx;
}
.fix-ftab .fix-input {
  flex:1;
  font-size: 28rpx;
}

.footer {
  width: 100%;
  padding: 0 20rpx;
  height: 92rpx;
  position: fixed;
  bottom: 0;
  background: #fff;
  border-top: 1px solid #eee;
  box-sizing: border-box;
}

.footer .iconfont {
  flex: 0 0 56rpx;
  width: 56rpx;
  font-size: 56rpx;
  margin-right: 10rpx;
}

.footer .control {
  flex: 1;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 30rpx;
}

.footer input {
  width: 100%;
  border: 1px solid #ccc;
  padding-left: 20rpx;
  border-radius: 4px;
}
