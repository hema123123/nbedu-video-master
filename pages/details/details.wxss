/* pages/details/details.wxss */
.video-wrapper{
  background: #fff;
}
.course-video{
  width: 100%;
}

.course-warpper{
  display: flex;
  padding: 0 20rpx 20rpx;
  background: #fff;
}
.course-warpper .course-content{
  flex:1;
}
.course-warpper .course-share{
  flex:0 0 200rpx;
  width: 200rpx;
}


.course-content{
  font-size: 28rpx;
  color:#353535;
}
.course-content .course-name{
  font-size: 32rpx;
  margin-bottom: 4rpx;
}
.course-content .course-des{
  color:#888;
  font-size: 26rpx;
  margin-top: 10rpx;
}


.course-warpper .course-share{
  display: flex;
  align-items: flex-end;
  font-size: 28rpx;
  text-align: center;
  justify-content: center;
}
.course-warpper .course-share .course-share-item{
  width: 50%;
  border:none;
  padding: 0;
  font-size: 28rpx;
  color:#888;
}
.course-warpper .course-share .iconfont{
  color:#00b800;
  font-size: 56rpx;
  height:56rpx;
  line-height: 56rpx;
}



.instru {
  display: flex;
  padding:30rpx 20rpx 20rpx;
  flex-direction: column;
  background: #fff;
  font-size:28rpx;
  color:#888
}
.instru .instru-title{
  color:#dc5900;
  text-align: center
}  
.instru text{
  color:#353535;
}

.footer{
  width: 100%;
  height: 46px;
  position: fixed;
  bottom: 0;
  display: flex;
  align-items: center;
  background: #fff;
  border-top:1px solid #eee;
  box-sizing: border-box;
}
.footer .iconfont{
  flex: 0 0 100rpx;
  width: 100rpx;
  font-size: 60rpx;
  text-align: center;
  color:#00b800;
}
.footer button{
  flex: 1;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 30rpx;
}