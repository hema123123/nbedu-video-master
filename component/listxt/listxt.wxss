/* component/listxt/listxt.wxss */
@import "../../app.wxss";

.pro-txt {
  font-size: 24rpx;
  color: #9e9e9e;
}

.pro-txt.flex-column .pro-tag {
  margin: 20rpx 0;
}

.pro-txt.flex-row .pro-tag {
  margin: 10rpx 0 40rpx;
}

/* 公共样式 */

.pro-txt .pro-name {
  font-size: 30rpx;
  color: #333;
}

.pro-txt .pro-tag text {
  color: #ff366c;
  padding: 0rpx 6rpx;
  margin-right: 10rpx;
  border-radius: 6rpx;
  border: 2rpx solid #ff366c;
}

.pro-txt .pro-tag text:last-child {
  margin-right: 0;
}

.separator {
  margin: 0 10rpx;
}
